{
  "openapi": "3.0.0",
  "info": {
    "title": "RedCV AI Authentication API",
    "description": "API autentikasi untuk RedCV AI, mendukung registrasi, login, pengambilan data pengguna, dan logout menggunakan JWT.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://192.168.1.100:3000",
      "description": "Server lokal untuk pengujian"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Mendaftarkan pengguna baru",
        "description": "Membuat akun pengguna baru dengan email, kata sandi, dan nama (opsional). Kata sandi akan dienkripsi sebelum disimpan.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Nama pengguna (opsional, minimal 3 karakter)",
                    "example": "Nama Pengguna"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Alamat email pengguna (wajib, harus unik)",
                    "example": "user@example.com"
                  },
                  "password": {
                    "type": "string",
                    "description": "Kata sandi pengguna (wajib, minimal 6 karakter)",
                    "example": "password123"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pengguna berhasil terdaftar",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "userId": {
                          "type": "integer",
                          "example": 1
                        },
                        "name": {
                          "type": "string",
                          "example": "Nama Pengguna"
                        },
                        "email": {
                          "type": "string",
                          "example": "user@example.com"
                        }
                      }
                    },
                    "message": {
                      "type": "string",
                      "example": "Pengguna berhasil terdaftar"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validasi gagal atau email sudah terdaftar",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "fail"
                    },
                    "message": {
                      "type": "string",
                      "example": "Email sudah terdaftar"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Kesalahan server",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "fail"
                    },
                    "message": {
                      "type": "string",
                      "example": "Registrasi gagal: [pesan error]"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login pengguna",
        "description": "Mengautentikasi pengguna dengan email dan kata sandi, menghasilkan token JWT yang berlaku selama 1 jam.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Alamat email pengguna",
                    "example": "user@example.com"
                  },
                  "password": {
                    "type": "string",
                    "description": "Kata sandi pengguna",
                    "example": "password123"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login berhasil, token JWT dikembalikan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": {
                          "type": "string",
                          "description": "Token JWT untuk autentikasi",
                          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                        }
                      }
                    },
                    "message": {
                      "type": "string",
                      "example": "Berhasil login, password benar"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Email tidak ditemukan atau kata sandi salah",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "fail"
                    },
                    "message": {
                      "type": "string",
                      "example": "Password salah, silakan coba lagi"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Kesalahan server",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "fail"
                    },
                    "message": {
                      "type": "string",
                      "example": "Login gagal: [pesan error]"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "summary": "Mengambil data pengguna",
        "description": "Mengembalikan data pengguna yang sedang login berdasarkan token JWT.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Data pengguna berhasil diambil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "example": 1
                        },
                        "name": {
                          "type": "string",
                          "example": "Nama Pengguna"
                        },
                        "email": {
                          "type": "string",
                          "example": "user@example.com"
                        }
                      }
                    },
                    "message": {
                      "type": "string",
                      "example": "Data pengguna berhasil diambil"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Token tidak valid, kedaluwarsa, atau di-blacklist",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 401
                    },
                    "error": {
                      "type": "string",
                      "example": "Unauthorized"
                    },
                    "message": {
                      "type": "string",
                      "example": "Token telah di-blacklist"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Kesalahan saat mengambil data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "fail"
                    },
                    "message": {
                      "type": "string",
                      "example": "Gagal mengambil data pengguna"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "summary": "Logout pengguna",
        "description": "Mengakhiri sesi pengguna dengan memasukkan token JWT ke daftar blacklist.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {}
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Logout berhasil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Berhasil logout"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Token tidak valid, kedaluwarsa, atau sudah di-blacklist",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 401
                    },
                    "error": {
                      "type": "string",
                      "example": "Unauthorized"
                    },
                    "message": {
                      "type": "string",
                      "example": "Token telah di-blacklist"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Kesalahan server",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "fail"
                    },
                    "message": {
                      "type": "string",
                      "example": "Logout gagal: [pesan error]"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
